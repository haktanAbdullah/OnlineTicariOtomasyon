@using MvcOnlineTicariOtomasyon.Models.Sınıflar
@model List<Faturalar>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div style="overflow-x:auto">
    <table class="table table-bordered" style="margin-top:20px">
        <tr>
            <th>Seri Sıra No</th>
            <th>Tarih</th>
            <th>Saat</th>
            <th>Toplam</th>
            <th>Güncelle</th>
            <th>Detaylar</th>
            <th>Yeni Kalem</th>
        </tr>

        @foreach (var k in Model)
        {
            <tr>
                <td>@k.seriNo @k.sıraNo</td>
                <td>@k.tarih</td>
                <td>@k.saat</td>
                <td>@k.toplam ₺</td>
                <td><a href="/Fatura/FaturaGetir/@k.id" class="btn btn-warning">Güncelle</a></td>
                <td><a href="/Fatura/FaturaDetay/@k.id" class="btn btn-default" style="background-color:lightcoral;color:white">Detaylar</a></td>
                <td><a href="/Fatura/FaturaDetay/@k.id" class="btn btn-default" style="background-color:darkviolet;color:white">Kalem</a></td>
            </tr>
        }
    </table>
</div>
<br />
<a href="/Fatura/FaturaEkle" class="btn btn-info">Yeni Fatura Girişi</a>
<br />
<br />
<br />
<button type="button" class="btn btn-warning" style="background-color:#d84444;color:white" data-toggle="modal" data-target="#Modal1">Popup Penceresi</button>

<div class="modal" id="Modal1">
    <div class="modal-dialog">
        <div class="modal-content">
             <div class="modal-header">
                 <h2 class="modal-title">Popup Diyalog Ekranı</h2>
             </div>
            <div class="modal-body">
                <table class="table table-bordered">
                    <tr>
                        <th>Seri No</th>
                        <th>Sıra No</th>
                        <th>Tutar</th>
                    </tr>
                    @foreach (var x in Model)
                    {
                        <tr>
                            <td>@x.seriNo</td>
                            <td>@x.sıraNo</td>
                            <td>@x.toplam</td>
                        </tr>
                     }
                </table>
                <button type="button" class="btn btn-danger" data-dismiss="modal">Tamam</button>
            </div>
        </div>
    </div>
</div>
