</div>
<br />
<a href="/Cari/CariEkle" class="btn btn-info">Yeni Cari Ekle</a>

<script>
    $(document).ready(function () {
        $(".sil-btn").click(function (e) {
            e.preventDefault();
            var id = $(this).data("id");
            swal({
                title: "Emin misiniz?",
                text: "Bu cariyi sildikten sonra geri alamayacaksınız!",
                icon: "warning",
                buttons: true,
                dangerMode: true,
            }).then((willDelete) => {
                if (willDelete) {
                    window.location.href = "/Cari/CariSil/" + id;
                }
                else {
                    swal("Cari silinmedi...");
                }
            });
        });
    });
</script>

<script>
    $(document).ready(function () {
        // TempData'dan başarı mesajını al ve SweetAlert ile göster
        var successMessage = '@(TempData["SuccessMessage"] ?? "")';
        if (successMessage) {
            swal({
                title: "İşlem başarılı!",
                text: successMessage,
                icon: "success",
                button: "Tamam",
            });
        }
    });
</script>

