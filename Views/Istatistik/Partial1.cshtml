@model  IEnumerable<MvcOnlineTicariOtomasyon.Models.Sınıflar.SinifGrup2>

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Departman Personel Sayıları</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body p-0">
        <table class="table table-sm">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Departman</th>
                    <th>Progress Bar</th>
                    <th style="width: 40px">Sayı</th>
                </tr>
            </thead>
            <tbody>
            <tbody>
                @{ int siraNo = 0;}
                @foreach (var x in Model)
                {
                    <tr>
                        <td>@{siraNo++;} @siraNo</td>
                        <td>@x.departman</td>
                        @{
                            string renk = null;

                            if (x.sayi >= 1 && x.sayi <= 3)
                            {
                                renk = "danger";
                            }
                            else if (x.sayi >= 4 && x.sayi <= 6)
                            {
                                renk = "warning";
                            }
                            else if (x.sayi >= 7 && x.sayi <= 9)
                            {
                                renk = "primary";
                            }
                            else if (x.sayi > 9)
                            {
                                renk = "success";
                            }
                        }

                        <td>
                            <div class="progress progress-xs">
                                <div class="progress-bar bg-@renk" style="width: 55%"></div>
                            </div>
                        </td>
                        @{
                            string renk1 = null;

                            if (x.sayi >= 1 && x.sayi <= 3)
                            {
                                renk1 = "danger";
                            }
                            else if (x.sayi >= 4 && x.sayi <= 6)
                            {
                                renk1 = "warning";
                            }
                            else if (x.sayi >= 7)
                            {
                                renk1 = "success";
                            }
                        }
                        <td><span class="badge bg-@renk1">@x.sayi</span></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>