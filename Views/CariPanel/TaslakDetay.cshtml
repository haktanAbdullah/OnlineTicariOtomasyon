@model  MvcOnlineTicariOtomasyon.Models.Sınıflar.mesajlar

@{
    ViewBag.Title = "TaslakDetay";
    Layout = "~/Views/Shared/_CariLayout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>AdminLTE 3 | Mail Oku</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/AdminLTE-3.0.4/plugins/fontawesome-free/css/all.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/AdminLTE-3.0.4/dist/css/adminlte.min.css">
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
</head>
<body>
    <!-- Content Wrapper. Contains page content -->
    <!-- Content Header (Page header) -->

    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Mesaj Detayları</h1>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-3">
                    <a href="/CariPanel/YeniMesaj/" class="btn btn-primary btn-block mb-3">Yeni Mesaj Oluştur</a>
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Klasörler</h3>
                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                            </div>
                        </div>
                        <div class="card-body p-0">
                            <ul class="nav nav-pills flex-column">
                                <li class="nav-item active">
                                    <a href="/CariPanel/GelenMesajlar/" class="nav-link">
                                        <i class="fas fa-inbox"> Gelen Mesajlar</i>
                                        <span class="badge bg-primary float-right">@ViewBag.d1</span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="/CariPanel/GidenMesajlar/" class="nav-link">
                                        <i class="far fa-envelope"> Gönderdiğim Mesajlar</i>
                                        <span class="badge bg-primary float-right">@ViewBag.d2</span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="#" class="nav-link">
                                        <i class="far fa-file-alt"></i> Taslaklar
                                        <span class="badge bg-primary float-right">@ViewBag.d3</span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="/CariPanel/CopKutusu/" class="nav-link">
                                        <i class="far fa-trash-alt"></i> Çöp Kutusu
                                        <span class="badge bg-primary float-right">@ViewBag.d4</span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    
                </div>
                <!-- /.col -->
                <div class="col-md-9">
                    <div class="card card-primary card-outline">
                        <div class="card-header">
                            <h3 class="card-title">Mesaj Taslağı</h3>
                        </div>
                        <!-- /.card-header -->
                        <form class="form-group" method="post">
                            <div class="card-body">
                                <div class="form-group">
                                    <input class="form-control" name="alici" placeholder="Kime:" value="@Model.alici">
                                </div>
                                <input type="hidden" name="mesajId" value="@Model.mesajId" />
                                <div class="form-group">
                                    <input class="form-control" name="konu" placeholder="Konu:" value="@Model.konu">
                                </div>
                                <div class="form-group">
                                    <textarea id="compose-textarea" name="icerik" placeholder="İçerik:" class="form-control" style="height: 300px">@Model.icerik</textarea>
                                </div>
                                <button type="submit" class="btn btn-primary" name="durum" value="gonderici"><i class="far fa-envelope"></i> Gönder </button>
                                <div class="float-right">
                                    <button type="submit" class="btn btn-default" name="durum" value="alici"><i class="fas fa-pencil-alt"></i> Taslak </button>
                                </div>
                            </div>
                        </form>
                        <!-- /.card-body -->
                        <div class="card-footer">
                            <a href="/CariPanel/GelenMesajlar/" class="btn btn-default"><i class="fas fa-times"></i> Vazgeç </a>
                        </div>
                        <!-- /.card-footer -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
    </section>
    <script src="~/AdminLTE-3.0.4/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/AdminLTE-3.0.4/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/AdminLTE-3.0.4/dist/js/adminlte.min.js"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="~/AdminLTE-3.0.4/dist/js/demo.js"></script>
</body>
</html>


