@using MvcOnlineTicariOtomasyon.Models.Sınıflar
@model List<SatisHareket>

@{
    ViewBag.Title = "Siparislerim";
    Layout = "~/Views/Shared/_CariLayout.cshtml";
}

<br />
<h2>Sipariş Geçmişim</h2>
<br />

<div style="overflow-x:auto">
    <table class="table table-bordered">
        <tr>
            <th>Ürün Adı</th>
            <th>Fiyat</th>
            <th>Tarih</th>
        </tr>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.urun.ad</td>
                <td>@x.fiyat</td>
                <td>@Convert.ToDateTime(x.tarih).ToString("dd/MM/yyyy")</td>
            </tr>
        }
    </table>
</div>
